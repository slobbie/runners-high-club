{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@hooks/*": ["src/shared/hooks/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      "@common/*": ["src/common/*"],
      "@navigation/*": ["src/navigation/*"],
      "@utils/*": ["./src/common/utils/*"]
    }
  }
}
